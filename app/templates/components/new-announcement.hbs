{{#if addNewAnnouncement }}
  <div>
    <form>
      <div class="form-group">
        <label for="message">Message</label>
        {{input value=message id=message}}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id=date}}
      </div>
      <button {{action 'save'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
